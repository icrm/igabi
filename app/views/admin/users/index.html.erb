<%= provide(:title, "Usuários") %>
  <div class="row">
    <div class="span8">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <h2>Usuários Cadastrados</h2>

      <table class="table table-striped table-condensed">
        <col width="10%" />
        <col width="46%" />
        <col width="10%" />
        <col width="19%" />
        <col width="5%" />
        <col width="5%" />
        <col width="5%" />
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ativo?</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.active? %></td>
            <td><a href="<%= admin_user_path(user) %>" rel="tooltip" title="Visualizar"><i class="icon-eye-open"></i></a></td>
            <td><a href="<%= edit_admin_user_path(user) %>" rel="tooltip" title="Editar"><i class="icon-edit"></i></a></td>
            <td>
              <a href="<%= admin_user_path(user) %>" rel="tooltip" title="Excluir" data-confirm="Deseja realmente excluir este registro?" data-method="delete">
                <i class="icon-trash"></i>
              </a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="span4">
      <div class="form-actions">
        <a href="<%= new_admin_user_path %>" class="btn btn-small"><i class="icon-plus"></i>&nbsp;Novo Usuário</a>
      </div>
    </div>
  </div>
