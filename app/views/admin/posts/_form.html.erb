<%= form_for([:admin, @post], html: { class: "form-horizontal" }) do |f| %>
  <fieldset>
    <legend>Cadastro de Notícias</legend>
    <div class="control-group">
      <%= f.label :title, "Título", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :title, class: "span6" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sumary, "Resumo", class: "control-label" %>
      <div class="controls">
        <%= f.text_area :sumary, class: "tinymce input-xlarge", rows: 3 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :post, "Notícia", class: "control-label" %>
      <div class="controls">
        <%= f.text_area :post, class: "tinymce input-xlarge", rows: 5 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :active, "Publicar?", class: "control-label" %>
      <div class="controls">
        <label class="checkbox">
          <%= f.check_box :active %>
          Selecione caso queira publicar a notícia.
        </label>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Salvar", class: "btn btn-small btn-primary" %>
    </div>

  </fieldset>
<% end %>
